{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':automergeAll',
    ':automergePr',
    ':semanticCommits',
    ':separateMultipleMajorReleases',
    ':separatePatchReleases',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigestsToSemver',
    'preview:dockerCompose',
    'preview:buildkite',
    'replacements:all',
    'security:openssf-scorecard',
  ],
  rebaseWhen: 'conflicted',
  schedule: [
    'at any time',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  prConcurrentLimit: 0,
  prHourlyLimit: 0,
  major: {
    dependencyDashboardApproval: false,
  },
  addLabels: [
    'dependencies',
    '{{manager}}',
    '{{updateType}}'
  ],
  internalChecksFilter: 'strict',
  cloneSubmodules: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
  },
  packageRules: [
    {
      matchManagers: [
        'cargo',
      ],
      rangeStrategy: 'replace',
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'elquentaro/devcontainer',
      ],
      pinDigests: false,
    },
    {
      matchManagers: [
        'github-actions',
      ],
      matchPackageNames: [
        'taiki-e/install-action',
      ],
      extends: [
        'schedule:weekly',
      ],
    },
  ],
}
